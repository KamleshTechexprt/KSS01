<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rule_for_contract_cost</fullName>
    <active>true</active>
    <description>Total cost to company shoild be greater than 0.</description>
    <errorConditionFormula>Contract_Cost__c  &lt;= 0  ||  ISBLANK(Contract_Cost__c) =True</errorConditionFormula>
    <errorDisplayField>Contract_Cost__c</errorDisplayField>
    <errorMessage>Please enter Contract Cost value.</errorMessage>
</ValidationRule>
